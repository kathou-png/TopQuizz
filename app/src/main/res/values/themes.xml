<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TopQuiz" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_100</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/light_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:tint">@color/purple_700</item>
        <item name="android:background">@color/purple_100</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.darkTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">#110523</item>
        <item name="colorPrimaryVariant">#D7D6D8</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#315350</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:tint">@color/white</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>
    <style name="PositiveButtonStyle"  parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:background">@color/purple_700</item>
        <item name="backgroundColor">@color/purple_700</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:background">@color/purple_700</item>
        <item name="backgroundColor">@color/purple_700</item>
    </style>
</resources>